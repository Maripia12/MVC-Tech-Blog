<div class="posts">
  {{#each posts}}
    <div class="card">
      <div class="cardheader">
        <label><a href="/post/{{id}}">{{title}}</a></label>
        <div> Posted by {{User.username}} on {{format_date date_created}} </div>
      </div>
      <div class="card-body">
        {{body}}
      </div>
    </div>
  {{/each}}
</div>