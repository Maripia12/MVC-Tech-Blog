<div class='post'>
	<div class="card">
		<div class="card-header">
			<h2>{{post.title}}</h2>
		<div>Posted By {{post.User.username}} om {{format_date post.createdAt}}</div>
		</div>
		<div class="card-body">
			{{post.body}}
		</div>
	</div>

	{{#if post.Comments}}
	<div class="card">
		<div class="card-header">
			<h3>Comments</h3>
		</div>
		<div class="card-body">
		{{#each post.Comments}}
		<div>
			<p>{{body}}</p>
			<p>{{User.username}}, {{format_date createdAt}}</p>
		</div>
{{/each}}
		</div>
	</div>
	{{/if}}

	<form class="card" id="newComment">
		<div class="card-header">
			<h3>Add Comment</h3>
		</div>
		<div class="card-body">
			<input type="hidden" value="{{post.id}}" name="post-id">

			<label for="comment-body" class="form-input">Comment</label>

			<textarea name="comment-body" class="form-input" ></textarea>

			<button type="submit" class"btn">Submit</button>
		</div>
	</form>
</div>

<script src='/js/comment.js'></script>